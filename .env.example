# MKG Elektromekanik Otomasyon - Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# API KEYS
# ===================================

# Gemini API Key (for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# EmailJS Configuration (for contact forms)
# Get your keys from: https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here

# ===================================
# APPLICATION CONFIG
# ===================================

# Application Environment
NODE_ENV=production

# Base URL (production domain)
VITE_APP_URL=https://mkg-elektromekanik.com

# API Base URL (if using separate API server)
VITE_API_URL=https://api.mkg-elektromekanik.com

# ===================================
# FEATURE FLAGS
# ===================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_SERVICE_WORKER=true

# ===================================
# ANALYTICS & MONITORING
# ===================================

# Google Analytics ID (optional)
VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ===================================
# CONTACT FORM
# ===================================

# Contact form email endpoint
VITE_CONTACT_EMAIL_ENDPOINT=/api/contact

# Newsletter subscription endpoint
VITE_NEWSLETTER_ENDPOINT=/api/newsletter

# ===================================
# SOCIAL MEDIA
# ===================================

# Social media links
VITE_LINKEDIN_URL=https://linkedin.com/company/mkg-elektromekanik
VITE_TWITTER_URL=https://twitter.com/mkg_otomasyon
VITE_FACEBOOK_URL=https://facebook.com/mkg.elektromekanik

# ===================================
# COMPANY INFO
# ===================================

# Company contact details
VITE_COMPANY_EMAIL=info@mkg.com
VITE_COMPANY_PHONE=+90 224 555 0100
VITE_COMPANY_ADDRESS=Nilüfer Org. San. Böl., 123 Otomasyon Cad, 16000 Bursa, Türkiye

# ===================================
# BUILD OPTIMIZATION
# ===================================

# Enable source maps in production (false recommended)
VITE_ENABLE_SOURCEMAPS=false

# Enable bundle analyzer
VITE_ENABLE_BUNDLE_ANALYZER=false